<h1> All our flats </h1>
<p>All <%= @flats.count %> flats.</p>

<div class="d-flex flex-wrap justify-content-between">
  <% @flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <%= image_tag("https://source.unsplash.com/random?sig=#{rand(0..999)}", size: "300x200", class: "card-img-top") %>
      <div class="card-body">
        <h5 class="card-title"> <%= flat.name %></h5>
        <p class="card-text"> <%= flat.address %></p>
        <div class="mb-3">
          <i class="fas fa-user-friends"> <%= flat.number_of_guests %></i>
          <i class="fas fa-euro-sign"> <%= flat.price_per_night %></i>
        </div>
        <div class="d-flex flex-wrap justify-content-between">
          <%= link_to "More info", flat_path(flat), class: "btn btn-primary text-white" %>
          <%= link_to "Edit", flat_path(flat), class: "btn btn-warning text-white" %>
          <%= link_to "Remove", flat_path(flat), class: "btn btn-danger text-white" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

